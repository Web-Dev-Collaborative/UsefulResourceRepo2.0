<Books xmlns:sql="urn:schemas-microsoft-com:xml-sql">
   <sql:query>
      SELECT Title, Author
      FROM books, authors
      WHERE books.ISBN=authors.ISBN
      FOR XML AUTO
   </sql:query>
   <sql:header>
      <sql:param name="maxPrice">40</sql:param>
   </sql:header>
   <sql:query>
      EXEC getCheapBooks @maxPrice
   </sql:query>
</Books>