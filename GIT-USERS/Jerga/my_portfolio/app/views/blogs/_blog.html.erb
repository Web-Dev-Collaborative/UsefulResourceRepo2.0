<%= link_to blog_path(blog) do %>
  <div class="card blog-item" style="width: 250px;" >
    <%= image_tag blog.main_image, width: "100%", class: "card-img-top" %>
    <div class="card-block">
      <h4 class="card-title"><%= link_to blog.title, blog_path(blog) %></h4>

      <div class="card-text">
          <%= markdown(truncate blog.body, length: 50) %>
      </div>
    </div>
  </div>
<% end %>
