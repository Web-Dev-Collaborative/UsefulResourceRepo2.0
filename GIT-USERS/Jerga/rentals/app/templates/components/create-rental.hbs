<div class="rental-form {{if isLoading "disabled"}}">
    {{#if isLoading}}
      <div class="loader"></div>
    {{/if}}
  <div class="row">
    <div class="col-md-6">
      <form class="form-horizontal">
        <div class="form-group">
          <label for="name" class="col-md-2 control-label">Title</label>
          <div class="col-md-12">
            {{input value=newRental.title class="form-control"}}
          </div>
        </div>
        <div class="form-group">
          <label for="name" class="col-md-2 control-label">City</label>
          <div class="col-md-12">
            {{input value=newRental.city class="form-control"}}
          </div>
        </div>
        <div class="form-group">
          <label for="name" class="col-md-2 control-label">Category</label>
          <div class="col-md-12">
            <select class="form-control" onchange={{action "setSelection" value="target.value"}}>
            <option value="">--Choose--</option>
            {{#each communityPropertyTypes as |type|}}
              <option value={{newRental.category}} >{{type}}</option>
            {{/each}}
            </select>
          </div>
        </div>
        <div class="form-group">
          <label for="image" class="col-md-2 control-label">Image</label>
          <div class="col-md-12">
            {{#file-upload name="photos"
                           accept="image/jpg, image/png, 'image/jpeg"
                           onfileadd=(action "uploadImage" newRental)}}
              <a id="upload-image" class= "btn btn-primary"tabindex=0>Add an Image.</a>
            {{/file-upload}}
          </div>
          <div class="col-md-12 image-name">
            {{imageName}}
          </div>
        </div>
        <div class="form-group">
          <label for="name" class="col-md-2 control-label">Bedrooms</label>
          <div class="col-md-12">
            {{input value=newRental.bedrooms type="number" class="form-control"}}
          </div>
        </div>
        <div class="form-group">
          <label for="description" class=" col-md-2 control-label">Description</label>
          <div class="col-md-12">
            {{textarea value=newRental.description class='form-control'}}
          </div>
        </div>
        <div class="form-group">
          <label for="description" class=" col-md-4 control-label">Daily Rate</label>
          <div class="col-md-12">
            {{input value=newRental.daily_rate type="number" class='form-control'}}
          </div>
        </div>
        <div class="form-group">
         <div class="col-sm-offset-2 col-sm-10">
           <button {{action 'createRental' newRental}} class="btn btn-primary">Save</button>
         </div>
       </div>
      </form>
    </div>
    <div class="col-md-6">
      {{#if errorMessage}}
        {{#each errorMessage as |error|}}
          <div class="alert alert-danger">
            {{error.name}} {{error.detail}}
          </div>
        {{/each}}
      {{/if}}
    </div>
  </div>
</div>

